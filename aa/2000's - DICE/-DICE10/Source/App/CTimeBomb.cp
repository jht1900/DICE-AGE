#include "CTimeBomb.h"#include "DateTimeUtils.h"// ------------------------------------------------------------------------// Put up an alert and return an error code (which will cause the app// to quit) if the expiration date has passed.int	TimeBomb(){	int	bomb = 0;	#if kDoBomb	DateTimeRec expDate = { kBOMB_YEAR, kBOMB_MONTH, kBOMB_DAY, 0, 0, 0, 0 };	#if 1	unsigned long expSeconds;	unsigned long nowSeconds;	#else	 long expSeconds;	 long nowSeconds;	#endif		// Determine the expiration date/time in seconds.	DateToSeconds(&expDate,&expSeconds);		// Get the current date/time in seconds.	GetDateTime( &nowSeconds);		if (nowSeconds > expSeconds) 	{		bomb = 1;	}	#endif			return bomb;}// ------------------------------------------------------------------------// ------------------------------------------------------------------------