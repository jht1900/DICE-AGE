-voidCEditItem::ListenToMessage(	MessageT	inMessage,	void 		*ioParam ){#pragma unused(ioParam)	switch ( inMessage )	{		case 100:		{			mEditField->GetDescriptor( mText );						#if 0			if ( mText[0] == 0 ) {				mText = "\p-";			}			#endif						break;		}	}}// ---------------------------------------------------------------------------// ---------------------------------------------------------------------------