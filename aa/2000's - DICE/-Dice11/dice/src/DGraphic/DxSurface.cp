s->gworldPtr );	pSource = GetPortBitMapForCopyBits( input->gworldPtr );	pDest = GetPortBitMapForCopyBits( this->gworldPtr );	CopyBits( pSource, pDest, sourceRect, destRect, inkMode, 0);	err = QDError();	MacSetPort (savedPort);}// --------------------------------------------------------------------------------void DxSurface::GetBounds( Rect *outRect){	if (! this->gworldPtr)		return;		GetPortBounds( this->gworldPtr, outRect );}// ---------------------------------------------------------------------------------// ---------------------------------------------------------------------------------