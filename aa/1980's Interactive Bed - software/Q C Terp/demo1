(defun go()	(setq button-wino (wino button-def 'dir 380 150 110 180))	(setq menu-list (list button-wino))		(SetPort button-wino)	(MoveTo xpos ypos)	(ShowPen)	(PenSize xdelta ydelta)		(sh))(setq button-def 	'(	(button up up-func)		(button down down-func)		(button left left-func)		(button right right-func)		(button change change-func)		(button done done-func)	))(defun sh()	(setq done-yet () )	(show menu-list 'exec-loop))(defun exec-loop()	done-yet)(setq xdelta 10)(setq ydelta 10)(setq xpos 50)(setq ypos 50)(defun up-func()	(setq ypos (- ypos ydelta))	(LineTo xpos ypos))(defun down-func()	(setq ypos (+ ypos ydelta))	(LineTo xpos ypos))(defun left-func()	(setq xpos (- xpos xdelta))	(LineTo xpos ypos))(defun right-func()	(setq xpos (+ xpos xdelta))	(LineTo xpos ypos))(defun change-func()	(setq xdelta (mod (random) 30))	(setq ydelta xdelta)	(PenSize xdelta ydelta)	(PenPat (+ 1 (mod (random) 5))))(defun done-func()	(setq done-yet t))